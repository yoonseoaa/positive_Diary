<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- DB정보 가져오기  -->
<properties resource="kr/smhrd/mapper/db.properties"></properties>
<typeAliases>
	<!-- 데이터 타입 별 alias 설정 -->
	<typeAlias type="kr.smhrd.model.MemberVO" alias="MemberVO"/>
	<typeAlias type="kr.smhrd.model.DiaryVO" alias="DiaryVO"/>
	
</typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
  <!-- SQL작성된 xml파일 위치를 적어주기. -->
    <mapper resource="kr/smhrd/mapper/MemberMapper.xml"/>
    <mapper resource="kr/smhrd/mapper/DiaryMapper.xml"/>
  </mappers>
</configuration>